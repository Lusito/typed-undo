{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "protocol": "inspector",
            "args": [
                "--require",
                "source-map-support/register",
                "./dist/test/**/*.js"
            ],
            "cwd": "${workspaceRoot}",
            "outFiles": [
                "${workspaceRoot}/dist"
            ],
            "sourceMaps": true,
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}